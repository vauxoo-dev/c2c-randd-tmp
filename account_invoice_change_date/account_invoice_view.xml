<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_change_date" model="ir.ui.view">
            <field name="name">Change Date</field>
            <field name="model">account.change.date</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Invoice Date">
                    <separator colspan="4" string="This wizard will change the date and period of the invoice"/>
                    <field name="date" on_change="onchange_date(date)"/>
                    <field name="period_id"/>
                    <separator colspan="4"/>
                    <group colspan="2" col="4">
                        <button special="cancel" string="Cancel"  icon="gtk-cancel"/>
                        <button name="change_date" string="Change date/period" type="object" icon="terp-stock_effects-object-colorize"/>
                        <separator colspan="4" string="Do not forget to recreate the invoice pdf !!!!"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_account_change_date" model="ir.actions.act_window">
            <field name="name">Change Date</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.change.date</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_account_change_date"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
        
        <record model="ir.ui.view" id="invoice_form_change_date">
            <field name="name">account.invoice.change_date.form</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <button name ="invoice_open" position="after">
                    <button name="%(action_account_change_date)d" type='action' string='Change Date' states='open,paid' icon="gtk-execute"/>
                </button>
            </field>
        </record>

        <record model="ir.ui.view" id="invoice_supplier_form_change_date">
            <field name="name">account.invoice.supplier.change_date.form</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <button name ="invoice_open" position="after">
                    <button name="%(action_account_change_date)d" type='action' string='Change Date' states='open,paid' icon="gtk-execute"/>
                </button>
            </field>
        </record>
        
        <record id="invoice_form_payment_term_date" model="ir.ui.view">
            <field name="name">invoice.form.payment.term.date</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="replace">
                    <field name="date_invoice" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
            </field>
        </record>
        
        <record id="invoice_form_payment_term" model="ir.ui.view">
            <field name="name">invoice.form.payment.term</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="payment_term" position="replace">
                    <field name="payment_term" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
            </field>
        </record>

        <record id="invoice_supplier_form_payment_term_date" model="ir.ui.view">
            <field name="name">invoice.supplier.form.payment.term.date</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="date_invoice" position="replace">
                    <field name="date_invoice" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
            </field>
        </record>
        
        <record id="invoice_supplier_form_payment_term" model="ir.ui.view">
            <field name="name">invoice.supplier.form.payment.term</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="payment_term" position="replace">
                    <field name="payment_term" on_change="onchange_payment_term_date_invoice(payment_term, date_invoice)"/>
                </field>
            </field>
        </record>
        
    </data>
</openerp>
