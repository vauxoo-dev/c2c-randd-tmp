<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="generate_xml_init_form_view">
      <field name="name">generate.xml.init.form</field>
      <field name="model">ir.model</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <field 
            name="model_ids"
            domain="[('state','=','base')]" 
            height="200" 
            width="500" 
            nolabel="1"/>
          <group col="4" colspan="2">
            <button 
              icon="gtk-cancel"
              special="cancel"
              string="Cancel"/>
            <button
              name="_decide"
              string="Next"
              type="object"
              default_focus="1"/>
          </group>
        </form>
      </field>
    </record>
    <record id="action_generate_xml" model="ir.actions.act_window">
      <field name="name">Generate XML</field>
      <field name="res_model">generate.xml</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="generate_xml_init_form_view"/>
      <field name="target">new</field>
    </record>
  </data>
</openerp>