    <!-- Helpdesk Support Search View  -->
    <record id="view_crm_case_helpdesk_filter" model="ir.ui.view">
      <field name="name">CRM - Helpdesk Search</field>
      <field name="model">crm.helpdesk</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="Search Helpdesk">
          <filter
            domain="[('date::date','=',time.strftime('%%Y-%%m-%%d'))]"
            help="Todays's Helpdesk Requests"
            icon="terp-go-today"
            separator="1"
            string="Today"/>
          <filter
            domain="[('date','&lt;', time.strftime('%%Y-%%m-%%d')), ('date','&gt;=',(datetime.date.today()-datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"
            help="Helpdesk requests during last 7 days"
            icon="terp-go-week"
            separator="1"
            string="7 Days"/>
          <filter
            domain="[('date_warning','&gt;', time.strftime('%%Y-%%m-%%d')), ('date_warning','&lt;=',(datetime.date.today()+datetime.timedelta(days=7)).strftime('%%Y-%%m-%%d'))]"
            help="Date Warning next 7 days"
            icon="terp-go-week"
            separator="1"
            string="Next 7 Days"/>
          <separator orientation="vertical"/>
          <filter
            domain="[('state','=','open')]"
            help="Open Cases"
            icon="terp-check"
            name="state"
            string="Open"/>
          <filter
            domain="[('state','=','draft')]"
            help="Draft Cases"
            icon="terp-check"
            name="state"
            string="Draft"/>
          <filter
            domain="[('state','in',['open','draft','pending'])]"
            help="Unclosd Cases"
            icon="terp-check"
            name="state"
            string="Unclosed"/>
          <separator orientation="vertical"/>
          <field name="name" select="1" string="Query"/>
          <field name="partner_id"/>
          <field name="user_id" select="1" widget="selection"/>
          <field name="section_id" select="1" widget="selection" string="Sales Team">
            <filter
              domain="['|', ('section_id', '=', context.get('section_id')), '|', ('section_id.user_id','=',uid), ('section_id.member_ids', 'in', [uid])]"
              groups="base.group_extended"
              help="My Sales Team(s)"
              icon="terp-personal+"/>
          </field>
          <newline/>
          <group expand="0" string="Group By...">
            <filter
              context="{'group_by':'partner_id'}"
              domain="[]"
              help="Partner"
              icon="terp-partner"
              string="Partner"/>
            <filter
              context="{'group_by':'user_id'}"
              domain="[]"
              help="Responsible User"
              icon="terp-personal"
              string="Responsible"/>
            <filter
              context="{'group_by':'section_id'}"
              domain="[]"
              help="Sales Team"
              icon="terp-personal+"
              string="Sales Team"/>
            <separator orientation="vertical"/>
            <filter
              context="{'group_by':'priority'}"
              domain="[]"
              icon="terp-rating-rated"
              string="Priority"/>
            <filter
              context="{'group_by':'state'}"
              domain="[]"
              icon="terp-stock_effects-object-colorize"
              string="State"/>
            <separator orientation="vertical"/>
            <filter
              context="{'group_by':'date'}"
              domain="[]"
              help="Request Date"
              icon="terp-go-month"
              string="Date"/>
            <filter
              context="{'group_by':'date_deadline'}"
              domain="[]"
              icon="terp-go-month"
              string="Deadline"/>
          </group>
        </search>
      </field>
    </record>
  </data>
