<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="stock.act_done" model="workflow.activity">
            <field name="wkf_id" ref="stock.wkf_picking"/>
            <field name="name">done</field>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
            <field name="flow_stop" eval="False"/>
        </record>

        <record id="stock.act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="stock.wkf_picking"/>
            <field name="name">cancel</field>
            <field name="kind">function</field>
            <field name="flow_stop" eval="False"/>
            <field name="action">action_cancel()</field>
        </record>



        <record id="act_reopen" model="workflow.activity">
            <field name="wkf_id" ref="stock.wkf_picking"/>
            <field name="name">reopen</field>
            <field name="action">action_reopen()
write({'state':'confirmed'})</field>
            <field name="kind">function</field>
        </record>
        
        <record id="trans_confirmed_reopen" model="workflow.transition">
            <field name="act_from" ref="stock.act_done"/>
            <field name="act_to" ref="act_reopen"/>
            <field name="condition">allow_reopen()</field>
            <field name="signal">button_reopen</field>
        </record>

        <record id="trans_cancel_reopen" model="workflow.transition">
            <field name="act_from" ref="stock.act_cancel"/>
            <field name="act_to" ref="act_reopen"/>
            <field name="condition">allow_reopen()</field>
            <field name="signal">button_reopen</field>
        </record>

        <record id="trans_draft_confirmed2" model="workflow.transition">
            <field name="act_from" ref="act_reopen"/>
            <field name="act_to" ref="stock.act_confirmed"/>
            <field name="signal">button_confirm</field>
        </record>

        <record id="trans_draft_cancel2" model="workflow.transition">
            <field name="act_from" ref="act_reopen"/>
            <field name="act_to" ref="stock.act_cancel"/>
            <field name="signal">button_cancel</field>
        </record>
        <record id="trans_confirmed_assigned_back2" model="workflow.transition">
            <field name="act_from" ref="act_reopen"/>
            <field name="act_to" ref="stock.act_confirmed"/>
            <field name="condition">not test_assigned()</field>
        </record>
        <record id="trans_confirmed_assigned2" model="workflow.transition">
            <field name="act_from" ref="act_reopen"/>
            <field name="act_to" ref="stock.act_assigned"/>
            <field name="condition">test_assigned()</field>
        </record>


   <record id="trans_confirmed_draft" model="workflow.transition">
       <field name="act_from" ref="stock.act_confirmed"/>
       <field name="act_to" ref="stock.act_draft"/>
       <!--
       <field name="signal">button_confirm</field>
-->
   </record>
   
    </data>
</openerp>
